            <!-- Only required for left/right tabs -->
            <ul class="nav nav-tabs" id="docTab">
              {{#tab_list}}
              <li class="{{active}}">
                <a href="#tab{{num}}" data-toggle="tab">{{name}}</a>
              </li>
              {{/tab_list}}
            </ul>
            <div class="tab-content">
              {{#tab_list}}
